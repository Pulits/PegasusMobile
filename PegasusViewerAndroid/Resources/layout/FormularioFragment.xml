<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".1"
        android:gravity="top"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="#ffffff">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Folio: GDI14-65-2-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fecha Elaboración: 06/04/2014"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#1A1A1A"
                android:paddingRight="5dp"
                android:id="@+id/checkFirmar" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="De: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Carlos Osorio, Director, PEGASO TEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:paddingRight="5dp"
                android:id="@+id/checkFirmar" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Para: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rodrigo Zarza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:paddingRight="5dp"
                android:id="@+id/checkFirmar" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CCE: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rodrigo Zarza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:paddingRight="5dp"
                android:id="@+id/checkFirmar" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Respuesta: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <CheckBox
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Enviar e-mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:layout_gravity="right"
                android:clickable="false"
                android:checked="true"
                android:id="@+id/checkBox1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/estilo_lista_firma">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="78dp"
                android:orientation="horizontal"
                android:clickable="false"
                android:id="@+id/radioGroup1">
                <RadioButton
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Avance"
                    android:textColor="#1A1A1A"
                    android:clickable="false"
                    android:id="@+id/radioButton1" />
                <RadioButton
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final"
                    android:textColor="#1A1A1A"
                    android:clickable="false"
                    android:id="@+id/radioButton2" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Avance(%): "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="100%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Avance anterior%: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="right"
                android:paddingLeft="50dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="right"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Carácter: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pública"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/estilo_lista_firma">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Carácter: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Oficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:gravity="left"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_lista_firma"
            android:layout_marginTop="10dp">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:layout_gravity="left"
                android:paddingLeft="5dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Administrador de Pegasus, Adm. de Sistema, PEGASO TEC\nlinea\linea\nlinea\nlinea\nlinea\linea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:id="@+id/txtContenidoFormularioFragment"
                android:maxLines="4"
                android:lines="4" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>